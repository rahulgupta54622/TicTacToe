<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03f9f9"
    tools:context=".Game">

    <TextView
        android:id="@+id/playfirsttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:text="Let your mobile play first."/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/playfirsttv">

        <RadioButton
            android:id="@+id/radiobtncomputer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="SURE"/>

    </RadioGroup>


    <TextView
        android:id="@+id/tvGameStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioGroup"
        android:gravity="center"
        android:text="HUMAN CHANCE"
        android:textColor="#f400f0"
        android:textSize="25sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        app:cardElevation="50dp">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:rowCount="3"
            android:columnCount="3"
            >

            <ImageView
                android:id="@+id/zero"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:onClick="onClickImageView"
                android:layout_row="0"
                android:layout_column="0"
                android:background="#e17920a6"
                android:tag="0"

                />

            <ImageView
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:onClick="onClickImageView"
                android:layout_row="0"
                android:layout_column="1"
                android:background="#FF0DF118"
                android:tag="1"
                />

            <ImageView
                android:id="@+id/two"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:onClick="onClickImageView"
                android:layout_row="0"
                android:layout_column="2"
                android:background="#e17920a6"
                android:tag="2"
                />

            <ImageView
                android:id="@+id/three"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:onClick="onClickImageView"
                android:layout_row="1"
                android:layout_column="0"
                android:background="#FF0DF118"
                android:tag="3"
                />

            <ImageView
                android:id="@+id/four"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:onClick="onClickImageView"
                android:layout_row="1"
                android:layout_column="1"
                android:background="#FF0DF118"
                android:src="@drawable/imageview_border"
                android:tag="4"
                />


            <ImageView
                android:id="@+id/five"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:onClick="onClickImageView"
                android:layout_row="1"
                android:layout_column="2"
                android:background="#FF0DF118"
                android:tag="5"
                />



            <ImageView
                android:id="@+id/six"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:onClick="onClickImageView"
                android:layout_row="2"
                android:layout_column="0"
                android:background="#e17920a6"
                android:tag="6"
                />

            <ImageView
                android:id="@+id/seven"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:onClick="onClickImageView"
                android:layout_row="2"
                android:layout_column="1"
                android:background="#FF0DF118"
                android:tag="7"
                />

            <ImageView
                android:id="@+id/eight"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:onClick="onClickImageView"
                android:layout_row="2"
                android:layout_column="2"
                android:background="#e17920a6"
                android:tag="8"
                />



        </GridLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/buttonRestartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="#fcf9fc"
        android:onClick="onClickRestart"
        android:text="RESTART THE MATCH"
        android:padding="5dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="invisible"/>

</RelativeLayout>